{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all-deps",
      "automerge": true
    },
    {
      "matchPackagePrefixes": [
        "GodotSharp",
        "Godot.NET.Sdk"
      ]
    },
    {
      "matchPackagePrefixes": [
        "Chickensoft"
      ],
      "allowedVersions": "/^(\\d+\\.\\d+\\.\\d+)(-godot(\\d+\\.)+\\d+(-.*)?)?$/"
    }
  ]
}
